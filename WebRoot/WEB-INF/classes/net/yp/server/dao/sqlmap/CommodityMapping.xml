<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD iBatis Mapper 3.0 //EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="net.yp.server.dao.CommodityMapper">

	<insert id="addCommodity" parameterType="Commodity">
		insert into tb_commodity(id,name,createTime,costPrice,currentPrice,context)
		values(#{id,jdbcType=VARCHAR},#{name,jdbcType=VARCHAR},now(),#{costPrice,jdbcType=VARCHAR}
		#{currentPrice,jdbcType=VARCHAR},#{context,jdbcType=VARCHAR})
	</insert>
	
	<update id="editCommodity" parameterType="Commodity">
		update tb_commodity set name=#{name,jdbcType=VARCHAR},costPrice=#{costPrice,jdbcType=VARCHAR},
		currentPrice=#{currentPrice,jdbcType=VARCHAR},context=#{context,jdbcType=VARCHAR}
		where id=#{id,jdbcType=VARCHAR}
	</update>
	
	<delete id="delCommondity" parameterType="String">
		delete from tb_commodity where id=#{id,jdbcType=VARCHAR}
	</delete>
	
	<select id="queryCommodity" parameterType="Map" resultType="Commodity">
		select id,name,createTime,costPrice,currentPrice,context from tb_commodity
		where id=#{id,jdbcType=VARCHAR}
	</select>
</mapper>	